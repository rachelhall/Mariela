---
interface Props {
  imageSrc: string;
  imageAlt?: string;
  imageSide?: "left" | "right";
  id?: string;
  className?: string;
  imageMaxHeight?: string;
}

const {
  imageSrc,
  imageAlt = "",
  imageSide = "right",
  id,
  className = "",
  imageMaxHeight,
} = Astro.props;
---

<section
  class:list={["split-section", className, { reverse: imageSide === "left" }]}
  id={id}
>
  <div class="content">
    <slot />
  </div>
  <div class="image">
    <img
      src={imageSrc}
      alt={imageAlt}
      loading="lazy"
      style={imageMaxHeight ? `max-height:${imageMaxHeight};` : `100%`}
    />
  </div>
</section>

<style>
  .split-section {
    display: flex;
    align-items: stretch;
    background-color: var(--white);
    overflow: hidden;
  }

  .split-section.reverse {
    flex-direction: row-reverse;
  }

  .content {
    flex: 1 1 55%;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .image {
    flex: 0 0 45%;
    display: flex;
    justify-content: flex-end;
    align-items: stretch;
    overflow: hidden;
  }

  .image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 0;
  }

  @media (max-width: 636px) {
    .split-section {
      flex-direction: column;
      padding: 0;
    }

    .image {
      display: none;
    }
  }
</style>
