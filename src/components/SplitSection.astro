---
interface Props {
  imageSrc: string;
  imageAlt?: string;
  imageSide?: "left" | "right";
  id?: string;
  className?: string;
  hideImageOnMobile?: boolean;
}

const {
  imageSrc,
  imageAlt = "",
  imageSide = "right",
  id,
  className = "",
  hideImageOnMobile = false,
} = Astro.props;
---

<section
  class:list={[
    "split-section",
    className,
    {
      reverse: imageSide === "left",
      "hide-image-mobile": hideImageOnMobile,
    },
  ]}
  id={id}
>
  <div class="content">
    <slot />
  </div>
  <div class="image">
    <img src={imageSrc} alt={imageAlt} loading="lazy" />
  </div>
</section>

<style>
  .split-section {
    display: flex;
    align-items: stretch;
    background-color: var(--white);
    overflow: hidden;
  }

  .split-section.reverse {
    flex-direction: row-reverse;
  }

  .content {
    flex: 1 1 55%;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .image {
    flex: 0 0 45%;
    display: flex;
    justify-content: flex-end;
    align-items: stretch;
    overflow: hidden;
    position: relative;
  }

  .image img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 0;
  }

  @media (max-width: 636px) {
    .split-section {
      flex-direction: column;
      padding: 0;
    }
    .split-section.reverse {
      flex-direction: column;
    }

    .hide-image-mobile .image {
      display: none;
    }

    .image img {
      position: relative;
    }
  }
</style>
