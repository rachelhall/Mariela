---
interface Props {
  type?:
    | "heading-xl"
    | "heading-lg"
    | "heading-md"
    | "heading-sm"
    | "heading-xs"
    | "body";

  color?:
    | "white"
    | "neutral-100"
    | "neutral-300"
    | "neutral-700"
    | "neutral-800"
    | "neutral-900"
    | "primary-100"
    | "primary-300"
    | "primary-500"
    | "primary-600"
    | "primary-700"
    | "primary-900"
    | "secondary-500"
    | "secondary-700";
  className?: string;
  textAlign?: "left" | "right" | "center";
  uppercase?: boolean;
  italic?: boolean;
  bold?: boolean;
  light?: boolean;
  inline?: boolean;
  url?: string;
}

const {
  bold,
  color = "neutral-100",
  italic,
  light,
  textAlign,
  type = "body",
  className,
  uppercase,
  inline,
  url,
} = Astro.props;

const styles = {
  color: `var(--${color})`,
  textAlign,
  ...(inline ? { display: "inline" } : {}),
};

const getElement = () => {
  if (url) {
    return "a";
  }
  switch (type) {
    case "heading-xl":
      return "h1";
    case "heading-lg":
      return "h2";
    case "heading-md":
      return "h3";
    case "heading-sm":
      return "h4";
    case "heading-xs":
      return "h5";
    case "body":
      return "p";
    default:
      return "p";
  }
};

const Element = getElement();
---

<Element
  class:list={[
    className,
    `type-${type}`,
    { uppercase, bold, italic, light, "text-link": !!url },
  ]}
  href={url}
  style={styles}
  ><slot /></Element
>

<style>
  p,
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    margin: 0;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  .type-heading-xl,
  .type-heading-lg,
  .type-heading-md,
  .type-heading-sm,
  .type-heading-xs {
    font-family: var(--font-heading, system-ui, sans-serif);
    letter-spacing: 0.02em;
  }

  .type-heading-xl,
  .type-heading-lg,
  .type-heading-md,
  .type-heading-sm,
  .type-heading-xs,
  .type-body {
    display: block;
  }

  h1 {
    font-size: 4rem;
  }
  .type-heading-xl {
    font-size: 4rem;
  }
  h2 {
    font-size: 3rem;
  }
  .type-heading-lg {
    font-size: 3rem;
  }
  h3 {
    font-size: 2rem;
  }
  .type-heading-md {
    font-size: 2rem;
  }
  h4 {
    font-size: 1.5rem;
  }
  .type-heading-sm {
    font-size: 1.5rem;
  }

  h5 {
    font-size: 1.25rem;
    font-weight: 400;
  }
  .type-heading-xs {
    font-size: 1.25rem;
    font-weight: 400;
  }

  .uppercase {
    text-transform: uppercase;
  }

  .bold {
    font-weight: bold;
  }

  .light {
    font-weight: 100;
  }

  .italic {
    font-style: italic;
  }

  .text-link {
    color: inherit;
    text-decoration: inherit;
  }

  @media screen and (max-width: 636px) {
    h1 {
      font-size: 2rem;
    }
    .type-heading-xl {
      font-size: 2rem;
    }
    h2 {
      font-size: 1.75rem;
    }
    .type-heading-lg {
      font-size: 1.75rem;
    }
    h3 {
      font-size: 1.5rem;
    }
    .type-heading-md {
      font-size: 1.5rem;
    }
    h4 {
      font-size: 1.25rem;
    }
    .type-heading-sm {
      font-size: 1.25rem;
    }

    h5 {
      font-size: 1rem;
      font-weight: 400;
    }
    .type-heading-xs {
      font-size: 1rem;
      font-weight: 400;
    }
  }
</style>
