---

<div class="shows" id="shows">
  <Text textAlign="center" uppercase type="heading-sm" color="white">
    Tour/Show History
  </Text>

  <div class="content">
    <!-- TOURS -->
    <div class="card">
      <Text color="white" uppercase bold type="heading-xs">üöå Tours</Text>
      <ul>
        {
          showData.tours.map((tour) => (
            <li>
              <strong>
                <a class="link" href={tour.link} target="_blank">
                  {tour.name}
                </a>
              </strong>{" "}
              {tour.description}
              <a class="link" href={tour.with.url} target="_blank">
                {tour.with.name}
              </a>
              , {tour.year}
            </li>
          ))
        }
      </ul>
    </div>

    <!-- FESTIVALS -->
    <div class="card">
      <Text color="white" uppercase bold type="heading-xs">üé™ Festivals</Text>
      <ul>
        {
          showData.festivals.map((festival) => (
            <li>
              <strong>{festival.name}</strong>, {festival.year} ‚Äî{" "}
              {festival.location}
            </li>
          ))
        }
      </ul>
    </div>

    <!-- CITIES & VENUES -->
    <div class="card">
      <Text color="white" uppercase bold type="heading-xs"
        >üìç Cities & Venues</Text
      >
      <div class="accordion">
        {
          Object.entries(showData.citiesAndVenues).map(([city, venues]) => (
            <details>
              <summary>
                <strong>{city}</strong>
              </summary>
              <ul>
                {venues.map((venue) => (
                  <li>{venue}</li>
                ))}
              </ul>
            </details>
          ))
        }
      </div>
    </div>
  </div>
</div>

<style lang="scss">
  .shows {
    background-color: var(--primary-700);
    padding: 2rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    align-items: center;
  }

  .content {
    max-width: 60%;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .card {
    padding: 1rem;
    background-color: var(--primary-500);
    padding: 1.5rem;
    border-radius: 0.75rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow:
      0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }

  .link {
    margin: 0 2px;
    text-decoration: underline;
    text-underline-offset: 2px;
    color: var(--white);
  }

  ul {
    list-style: disc;
    padding-left: 1.5rem;
    margin-top: 0.5rem;
  }

  li {
    font-weight: 400;
    margin-bottom: 0.25rem;
  }

  .accordion details {
    margin-top: 0.5rem;
    background: var(--primary-100);
    padding: 0.75rem;
    border-radius: 0.5rem;
    cursor: pointer;
    box-shadow:
      0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -1px rgba(0, 0, 0, 0.06);
    li {
      color: var(--primary-700);
    }
  }

  .accordion summary {
    cursor: pointer;
    font-weight: bold;
    color: var(--primary-700);
    margin-bottom: 0.5rem;
  }

  .accordion ul {
    padding-left: 1rem;
    margin-top: 0.5rem;
  }

  @media screen and (max-width: 636px) {
    .content {
      max-width: unset;
    }
  }
</style>
