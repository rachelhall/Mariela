---
import { Icon } from "astro-icon/components";

interface Props {
  direction?: "horizontal" | "vertical";
}
const { direction = "vertical" } = Astro.props;
---

<div class="socials">
  <ul class:list={[{ horizontal: direction === "horizontal" }]}>
    <li>
      <a
        href="https://www.instagram.com/mariela.band"
        target="_blank"
        rel="noopener noreferrer"
      >
        <Icon name="mdi:instagram" />
      </a>
    </li>
    <li>
      <a
        title="Instagram"
        href="https://www.youtube.com/@marielaband4208"
        target="_blank"
        rel="noopener noreferrer"
      >
        <Icon name="mdi:youtube" />
      </a>
    </li>
    <li>
      <a
        href="https://marielamusic.bandcamp.com/"
        target="_blank"
        rel="noopener noreferrer"
      >
        <Icon name="mdi:bandcamp" />
      </a>
    </li>
    <li>
      <a
        href="https://music.apple.com/us/artist/mariela/1330323192"
        target="_blank"
        rel="noopener noreferrer"
      >
        <Icon name="mdi:music-circle-outline" />
      </a>
    </li>
  </ul>
</div>
<style>
  .socials {
    position: absolute;
    z-index: 10;
    width: 100%;
    margin: 5rem 0;
  }

  ul {
    padding: 0 2rem;
    list-style: none;
    display: flex;
    margin: 0;
    flex-direction: column;
    align-items: flex-end;
  }
  a {
    color: unset;
    display: block;
  }

  svg {
    color: var(--primary-100);
    font-size: 1.5rem;
  }

  .horizontal {
    display: flex;
    flex-direction: row;
    gap: 1rem;
    justify-content: center;
  }
</style>
